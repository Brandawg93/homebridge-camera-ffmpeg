{
  "displayName": "Homebridge Camera FFmpeg",
  "name": "homebridge-camera-ffmpeg",
  "version": "2.0.0",
  "description": "ffmpeg plugin for homebridge: https://github.com/homebridge/homebridge",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf ./dist ./coverage",
    "build": "rimraf ./dist ./coverage && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "test": "jest --coverage",
    "watch:tests": "jest --watch",
    "lint": "eslint **/*.ts --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "postpublish": "npm run clean"
  },
  "keywords": [
    "homebridge-plugin",
    "meross",
    "homebridge"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/homebridge-plugins/homebridge-camera-ffmpeg.git"
  },
  "bugs": {
    "url": "http://github.com/homebridge-plugins/homebridge-camera-ffmpeg/issues"
  },
  "engines": {
    "node": ">=10",
    "homebridge": ">=1.0.0"
  },
  "files": [
    "LICENSE",
    "dist/**/*",
    "config.schema.json"
  ],
  "devDependencies": {
    "nodemon": ">=2.0.2",
    "@types/ip": "^1.1.0",
    "@types/jest": "^25.2.1",
    "@types/node": "14.0.1",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "homebridge": "^1.0.4",
    "jest": "^26.0.1",
    "ts-jest": "^25.5.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "ffmpeg-for-homebridge": "0.0.4",
    "ip": "^1.1.5",
    "debug": "^4.1.1"
  }
}
